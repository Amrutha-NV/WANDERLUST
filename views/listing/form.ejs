<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="show-card">
            <div class="card w-50">
                <img src="<%=listing.image.url %>" class="card-img-top show-img" alt="listing image">
                <div class="card-body">
                    <h5 class="card-title fs-1">
                        <%= listing.title %>
                    </h5>
                    <p class="card-text">
                        <%= listing.description %>
                    </p>
                    <p class="card-text">
                        &#8377;
                        <%= listing.price%>
                    </p>
                    <p class="card-text">
                        <%= listing.country%>
                    </p>
                    <p class="card-text">
                        <%= listing.location %>
                    </p>
                    <div class="btns">
                        <div class="btns-item"> <a href="/listings/<%=listing._id%>/edit"><button class="btn btn-danger">edit</button></a></div>
                        <form method="post" action="/listings/<%=listing._id%>/delete?_method=delete" class="btns-item">
                            <button class="btn btn-dark">delete!</button>
                        </form>
                    </div>

                </div>
            </div>

        </div>

    </body>